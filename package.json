{
	"name": "rnTemplate",
	"version": "0.0.1",
	"private": false,
	"scripts": {
		"android": "react-native run-android",
		"ios": "react-native run-ios",
		"start": "react-native start",
		"test": "jest -o --silent",
		"test:watch": "jest -o --watch --silent",
		"test:coverage": "jest -u --ci --silent --coverage",
		"test:ci": "jest -u --ci --silent --verbose",
		"serve:coverage": "open http://localhost:5000/ && serve coverage/lcov-report",
		"prettier": "npx prettier --write src/**/*.{ts,tsx}",
		"lint": "tsc --noEmit && eslint --fix --ext ts,tsx ./",
		"cm": "git add . && git cz",
		"release": "standard-version",
		"release:major": "yarn run release --release-as major --no-verify",
		"release:minor": "yarn run release --release-as minor --no-verify",
		"release:patch": "yarn run release --release-as patch --no-verify",
		"release:alpha": "yarn run release --prerelease alpha --no-verify",
		"release:beta": "yarn run release --prerelease beta --no-verify",
		"podlink": "npx pod-install ios"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "yarn test:ci"
		}
	},
	"lint-staged": {
		"src/*.{tsx,ts}": [
			"pretty-quick --staged && yarn run lint"
		]
	},
	"dependencies": {
		"@react-native-community/masked-view": "^0.1.10",
		"@react-navigation/native": "^5.7.3",
		"@react-navigation/stack": "^5.9.0",
		"react": "16.13.1",
		"react-native": "0.63.0",
		"react-native-gesture-handler": "^1.7.0",
		"react-native-reanimated": "^1.10.2",
		"react-native-safe-area-context": "^3.1.4",
		"react-native-screens": "^2.10.1"
	},
	"devDependencies": {
		"@babel/core": "^7.8.4",
		"@babel/runtime": "^7.11.2",
		"@higoralves/eslint-config": "^0.2.1",
		"@react-native-community/eslint-config": "^1.1.0",
		"@react-native-community/eslint-plugin": "^1.1.0",
		"@types/jest": "^26.0.10",
		"@types/react-native": "^0.63.6",
		"@types/react-test-renderer": "^16.9.2",
		"@typescript-eslint/eslint-plugin": "^2.27.0",
		"@typescript-eslint/parser": "^2.27.0",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^26.3.0",
		"babel-plugin-module-resolver": "^4.0.0",
		"cz-conventional-changelog": "^3.2.0",
		"eslint": "^6.5.1",
		"eslint-config-airbnb": "^18.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-import-helpers": "^1.1.0",
		"eslint-plugin-jest": "^23.20.0",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.20.6",
		"eslint-plugin-react-hooks": "^4.0.8",
		"eslint-plugin-react-native": "^3.8.1",
		"eslint-plugin-react-native-a11y": "^2.0.2",
		"husky": "^4.2.5",
		"jest": "^26.4.0",
		"lint-staged": "^10.2.11",
		"metro-react-native-babel-preset": "^0.62.0",
		"prettier": "^2.0.4",
		"pretty-quick": "^2.0.1",
		"react-test-renderer": "16.13.1",
		"serve": "^11.3.2",
		"standard-version": "^8.0.2",
		"typescript": "^3.8.3"
	},
	"jest": {
		"preset": "react-native",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
